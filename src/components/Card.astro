---
import type { Card } from "../types/types";



const { href, title, body,icon:Icon } = Astro.props as Card;
---

<li class=" rounded-lg shadow-sm hover:shadow-md hover:shadow-gray-400/50 transition-shadow shadow-gray-400/50 backdrop-blur-xl bg-slate-700/10">
	<a
		href={href}
		
	>
		<div class="flex flex-col items-center justify-center gap-4 p-8">
			<Icon/>
			<h2 class="text-2xl font-bold">{title}</h2>
			<p class="text-muted-foreground-900 text-center">
				{body}
			</p>
		</div>
	</a>
	
</li>
