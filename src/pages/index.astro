---
import Ojo from "../components/icons/Ojo.astro";
import Ab from "../components/icons/Ab.astro";
import Edit from "../components/icons/Edit.astro";
import Card from "../components/Card.astro";
import Layout from "../layouts/Layout.astro";
import type { Card as typeCard } from "../types/types";
const cards: typeCard[] = [
	{
		title: "Verbos",
		href: "verb",
		body: "Aprende y practica los verbos más comunes en inglés.",
		icon: Ojo,
	},
	{
		title: "Palabras Nuevas",
		href: "new-word",
		body: "Descubre y memoriza nuevas palabras en inglés..",
		icon: Ab,
	},
	{
		title: "Arreglar la Frase",
		href: "pharses",
		body: "Practica la gramática y la estructura de las frases en inglés.",
		icon: Edit,
	},
];
---

<Layout title="Aprendiendo Ingles">
	<ul class="container mx-auto grid grid-cols-1 md:grid-cols-3 gap-6">
		{
			cards.map((card)=><Card {...card}></Card>)
		}	
		
	</ul>
</Layout>
