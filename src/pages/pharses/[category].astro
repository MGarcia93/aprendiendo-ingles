---
import Layout from "../../layouts/Layout.astro";
import { pharses as data } from "../../data/pharses";
import { Pharses } from "../../components/React/page/Pharses";
import type { categoriesPharse, pharse } from "../../types/types";
type  categories = categoriesPharse & 'Todos'
export function getStaticPaths() {
  return [
    { params: { category: "Saludos_y_presentaciones" } },
    { params: { category: "Informacion_personal" } },
    { params: { category: "Vida_diaria" } },
    { params: { category: "Compras" } },
    { params: { category: "Tiempo_y_clima" } },
    { params: { category: "Direcciones_y_ubicaciones" } },
    { params: { category: "Actividades_cotidianas" } },
    { params: { category: "Gustos_y_preferencias" } },
    { params: { category: "Planes_futuros" } },
    { params: { category: "Emergencias_basicas" } },
    { params: { category: "Todos" } },
  ];
}
const { category } = Astro.params as { category: categories };
const pharses: pharse[] =
  category === "Todos"
    ? Object.entries(data).reduce(
        (acu, [key, values]) => [...acu, ...values],
        [] as pharse[]
      )
    : data[category];
---

<Layout title="Aprende nuevas palabras">
  <Pharses pharses={pharses} client:only />
</Layout>
